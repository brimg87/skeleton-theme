{% comment %}
  Social Sharing Component - Starside Armory Theme
  
  Usage: {% render 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product.featured_image %}
  
  Parameters:
  - share_title: Title to share
  - share_permalink: URL to share
  - share_image: Image to share (optional)
{% endcomment %}

{%- assign share_url = shop.url | append: share_permalink -%}
{%- assign encoded_title = share_title | url_encode -%}
{%- assign encoded_url = share_url | url_encode -%}

<div class="social-content">
  <div class="share-buttons">
    
    {% comment %} Twitter/X Share {% endcomment %}
    <a href="https://twitter.com/intent/tweet?text={{ encoded_title }}&amp;url={{ encoded_url }}" 
       target="_blank" 
       rel="noopener noreferrer" 
       class="share-button share-twitter"
       aria-label="Share on Twitter">
      <svg class="share-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
      <span class="share-label">[TWITTER_BROADCAST]</span>
    </a>
    
    {% comment %} Facebook Share {% endcomment %}
    <a href="https://www.facebook.com/sharer/sharer.php?u={{ encoded_url }}" 
       target="_blank" 
       rel="noopener noreferrer" 
       class="share-button share-facebook"
       aria-label="Share on Facebook">
      <svg class="share-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
      <span class="share-label">[FACEBOOK_UPLINK]</span>
    </a>
    
    {% comment %} Pinterest Share {% endcomment %}
    {%- if share_image -%}
      {%- assign pinterest_image = share_image | image_url: width: 1200 | prepend: 'https:' -%}
      <a href="https://pinterest.com/pin/create/button/?url={{ encoded_url }}&amp;media={{ pinterest_image | url_encode }}&amp;description={{ encoded_title }}" 
         target="_blank" 
         rel="noopener noreferrer" 
         class="share-button share-pinterest"
         aria-label="Share on Pinterest">
        <svg class="share-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24c6.624 0 11.99-5.367 11.99-12.013C24.007 5.367 18.641.001 12.017.001z"/>
        </svg>
        <span class="share-label">[PINTEREST_ARCHIVE]</span>
      </a>
    {%- endif -%}
    
    {% comment %} Email Share {% endcomment %}
    <a href="mailto:?subject={{ encoded_title }}&amp;body=Check this out: {{ encoded_url }}" 
       class="share-button share-email"
       aria-label="Share via email"
       title="Email: {{ encoded_title }} - {{ share_url }}">
      <svg class="share-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
      </svg>
      <span class="share-label">[EMAIL_TRANSMISSION]</span>
    </a>
    
    {% comment %} Copy Link {% endcomment %}
    <button type="button" 
            class="share-button share-copy" 
            data-url="{{ share_url }}"
            aria-label="Copy link to clipboard">
      <svg class="share-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/>
      </svg>
      <span class="share-label">[COPY_LINK]</span>
    </button>
  </div>
  
  <div class="share-url-display">
    <span class="url-label">DIRECT_LINK:</span>
    <span class="url-value">{{ share_url }}</span>
  </div>
</div>

<script>
  // Copy link functionality
  document.addEventListener('DOMContentLoaded', function() {
    const copyButtons = document.querySelectorAll('.share-copy');
    
    copyButtons.forEach(button => {
      button.addEventListener('click', async function() {
        const url = this.dataset.url;
        const label = this.querySelector('.share-label');
        const originalText = label.textContent;
        
        try {
          if (navigator.clipboard && window.isSecureContext) {
            await navigator.clipboard.writeText(url);
          } else {
            // Fallback for older browsers
            const textArea = document.createElement('textarea');
            textArea.value = url;
            textArea.style.position = 'fixed';
            textArea.style.left = '-999999px';
            textArea.style.top = '-999999px';
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            document.execCommand('copy');
            textArea.remove();
          }
          
          // Show success feedback
          label.textContent = '[LINK_COPIED]';
          this.style.borderColor = 'var(--color-accent-green)';
          this.style.color = 'var(--color-accent-green)';
          
          // Reset after 2 seconds
          setTimeout(() => {
            label.textContent = originalText;
            this.style.borderColor = '';
            this.style.color = '';
          }, 2000);
          
        } catch (err) {
          // Show error feedback
          label.textContent = '[COPY_FAILED]';
          this.style.borderColor = 'var(--color-accent-red)';
          this.style.color = 'var(--color-accent-red)';
          
          // Reset after 2 seconds
          setTimeout(() => {
            label.textContent = originalText;
            this.style.borderColor = '';
            this.style.color = '';
          }, 2000);
        }
      });
    });
  });
</script> 