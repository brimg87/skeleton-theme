<!doctype html>
<html lang="{{ request.locale.iso_code }}" class="password-page">
  <head>
    {% # Inlined CSS Variables %}
    {% comment %} CSS variables now defined in main stylesheet {% endcomment %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    
    {% # Load main theme styles for consistency %}
    {{ 'style.css' | asset_url | stylesheet_tag }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
    
    <title>{{ shop.name }} - Access Required</title>
  </head>

  <body>
    <div class="password-container">
      {{ content_for_layout }}
    </div>
    
    {% # Add theme JavaScript for enhanced functionality %}
    {{ 'script.js' | asset_url | script_tag }}
  </body>
</html>
