{% comment %}
  About Origin Section
  Timeline-style backstory of Starside Armory's founding
{% endcomment %}

<section class="about-origin-section section-padding">
  <div class="container">
    <div class="origin-content data-box">
      <div class="data-box-header">
        //: {{ section.settings.section_title | default: 'ORIGIN_PROTOCOL' }} ://
      </div>
      
      <div class="data-box-content">
        {% if section.settings.intro_text != blank %}
          <div class="origin-intro">
            {{ section.settings.intro_text }}
          </div>
        {% endif %}

        {% if section.settings.show_timeline %}
          <div class="origin-timeline">
            {% for i in (1..6) %}
              {% assign year_setting = 'timeline_' | append: i | append: '_year' %}
              {% assign title_setting = 'timeline_' | append: i | append: '_title' %}
              {% assign desc_setting = 'timeline_' | append: i | append: '_description' %}
              
              {% assign year = section.settings[year_setting] %}
              {% assign title = section.settings[title_setting] %}
              {% assign description = section.settings[desc_setting] %}
              
              {% if year != blank and title != blank %}
                <div class="timeline-item">
                  <div class="timeline-marker">
                    <span class="timeline-year">{{ year }}</span>
                  </div>
                  <div class="timeline-content">
                    <h3 class="timeline-title">{{ title }}</h3>
                    {% if description != blank %}
                      <div class="timeline-description">{{ description }}</div>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}

        {% if section.settings.show_founding_principles %}
          <div class="founding-principles">
            <h3 class="principles-title">{{ section.settings.principles_title | default: '[FOUNDING_PRINCIPLES]' }}</h3>
            <div class="principles-grid">
              {% for i in (1..4) %}
                {% assign principle_setting = 'principle_' | append: i %}
                {% assign principle = section.settings[principle_setting] %}
                
                {% if principle != blank %}
                  <div class="principle-item">
                    <span class="principle-marker">[{{ i }}]</span>
                    <span class="principle-text">{{ principle }}</span>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        {% endif %}

        {% if section.settings.closing_text != blank %}
          <div class="origin-closing">
            {{ section.settings.closing_text }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

