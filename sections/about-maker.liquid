{% comment %}
  About Maker Section
  Personal bio and story of the proprietor/maker
{% endcomment %}

<section class="about-maker-section section-padding">
  <div class="container">
    <div class="maker-content data-box">
      <div class="data-box-header">
        //: {{ section.settings.section_title | default: 'PROPRIETOR_PROFILE' }} ://
      </div>
      
      <div class="data-box-content">
        <div class="maker-profile-grid">
          {% if section.settings.maker_image != blank %}
            <div class="maker-visual">
              <div class="maker-image-container">
                <img src="{{ section.settings.maker_image | image_url: width: 600 }}"
                     srcset="{{ section.settings.maker_image | image_url: width: 300 }} 300w,
                             {{ section.settings.maker_image | image_url: width: 600 }} 600w,
                             {{ section.settings.maker_image | image_url: width: 900 }} 900w"
                     sizes="(max-width: 767px) 100vw, 50vw"
                     alt="{{ section.settings.maker_image.alt | default: section.settings.maker_name }}"
                     loading="lazy">
                {% if section.settings.show_image_overlay %}
                  <div class="image-overlay-data">
                    <span class="overlay-text">{{ section.settings.image_overlay_text | default: '[CLASSIFIED]' }}</span>
                  </div>
                {% endif %}
              </div>
              
              {% if section.settings.show_credentials %}
                <div class="maker-credentials">
                  <div class="credentials-title">[CREDENTIALS]</div>
                  {% for block in section.blocks %}
                    {% case block.type %}
                      {% when 'credential' %}
                        {% if block.settings.credential_text != blank %}
                          <div class="credential-item" {{ block.shopify_attributes }}>
                            <span class="credential-marker">></span>
                            <span class="credential-text">{{ block.settings.credential_text }}</span>
                          </div>
                        {% endif %}
                    {% endcase %}
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          {% endif %}

          <div class="maker-details">
            {% if section.settings.maker_name != blank %}
              <h2 class="maker-name">{{ section.settings.maker_name }}</h2>
            {% endif %}

            {% if section.settings.maker_title != blank %}
              <div class="maker-title">{{ section.settings.maker_title }}</div>
            {% endif %}

            {% if section.settings.maker_bio != blank %}
              <div class="maker-bio">
                {{ section.settings.maker_bio }}
              </div>
            {% endif %}

            {% if section.settings.show_stats %}
              <div class="maker-stats-grid">
                {% if section.settings.stat_1_label != blank %}
                  <div class="stat-item">
                    <div class="stat-value">{{ section.settings.stat_1_value }}</div>
                    <div class="stat-label">{{ section.settings.stat_1_label }}</div>
                  </div>
                {% endif %}
                {% if section.settings.stat_2_label != blank %}
                  <div class="stat-item">
                    <div class="stat-value">{{ section.settings.stat_2_value }}</div>
                    <div class="stat-label">{{ section.settings.stat_2_label }}</div>
                  </div>
                {% endif %}
                {% if section.settings.stat_3_label != blank %}
                  <div class="stat-item">
                    <div class="stat-value">{{ section.settings.stat_3_value }}</div>
                    <div class="stat-label">{{ section.settings.stat_3_label }}</div>
                  </div>
                {% endif %}
              </div>
            {% endif %}

            {% if section.settings.maker_quote != blank %}
              <div class="maker-quote">
                <div class="quote-text">"{{ section.settings.maker_quote }}"</div>
                {% if section.settings.maker_name != blank %}
                  <div class="quote-attribution">- {{ section.settings.maker_name }}</div>
                {% endif %}
              </div>
            {% endif %}

            {% if section.settings.contact_cta_text != blank and section.settings.contact_cta_url != blank %}
              <div class="maker-cta">
                <a href="{{ section.settings.contact_cta_url }}" class="btn btn-secondary">
                  {{ section.settings.contact_cta_text }}
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Maker",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title",
      "default": "PROPRIETOR_PROFILE"
    },
    {
      "type": "header",
      "content": "Maker Information"
    },
    {
      "type": "text",
      "id": "maker_name",
