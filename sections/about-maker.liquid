      "label": "Image overlay text",
      "default": "[CLASSIFIED]"
    },
    {
      "type": "header",
      "content": "Statistics"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Show statistics",
      "default": true
    },
    {
      "type": "text",
      "id": "stat_1_value",
      "label": "Statistic 1 value",
      "default": "20+"
    },
    {
      "type": "text",
      "id": "stat_1_label",
      "label": "Statistic 1 label",
      "default": "YEARS_EXPERIENCE"
    },
    {
      "type": "text",
      "id": "stat_2_value",
      "label": "Statistic 2 value",
      "default": "500+"
    },
    {
      "type": "text",
      "id": "stat_2_label",
      "label": "Statistic 2 label",
      "default": "DESIGNS_CREATED"
    },
    {
      "type": "text",
      "id": "stat_3_value",
      "label": "Statistic 3 value",
      "default": "100%"
    },
    {
      "type": "text",
      "id": "stat_3_label",
      "label": "Statistic 3 label",
      "default": "MISSION_DEDICATION"
    },
    {
      "type": "header",
      "content": "Credentials"
    },
    {
      "type": "checkbox",
      "id": "show_credentials",
      "label": "Show credentials",
      "default": true
    },
    {
      "type": "header",
      "content": "Contact CTA"
    },
    {
      "type": "text",
      "id": "contact_cta_text",
      "label": "Contact button text",
      "default": "[INITIATE_CONTACT]"
    },
    {
      "type": "url",
      "id": "contact_cta_url",
      "label": "Contact button URL"
    }
  ],
  "blocks": [
    {
      "type": "credential",
      "name": "Credential",
      "settings": [
        {
          "type": "text",
          "id": "credential_text",
          "label": "Credential",
          "default": "Certified Tactical Equipment Specialist"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Maker",
      "blocks": [
        {
          "type": "credential",
          "settings": {
            "credential_text": "Certified Tactical Equipment Specialist"
          }
        },
        {
          "type": "credential",
