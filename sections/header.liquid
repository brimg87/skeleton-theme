{% comment %} --- sections/header.liquid --- {% endcomment %}
<header class="site-header data-box">
  <div class="data-box-header">//: NAVIGATION_PROTOCOL ://</div>
  <div class="header-content">
    <div class="header-logo">
      <a href="{{ routes.root_url }}" class="logo-link">
        {{ shop.name | escape }}
      </a>
    </div>

    <nav class="main-nav" role="navigation">
      <ul class="nav-list">
        {%- for link in section.settings.menu.links -%}
          <li class="nav-item {% if link.links != blank %}has-dropdown{% endif %}">
            <a href="{{ link.url }}" class="nav-link {% if link.active %}active{% endif %}">
              {{ link.title | escape }}
              {% if link.links != blank %}
                <span class="dropdown-indicator">â–¼</span>
              {% endif %}
            </a>
            {% if link.links != blank %}
              <ul class="dropdown-menu">
                {%- for childlink in link.links -%}
                  <li class="dropdown-item">
                    <a href="{{ childlink.url }}" class="dropdown-link {% if childlink.active %}active{% endif %}">
                      {{ childlink.title | escape }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            {% endif %}
          </li>
        {%- endfor -%}
      </ul>
    </nav>

    <div class="user-interface">
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="ui-link account-link" aria-label="Account">
          <span class="ui-icon">ðŸ‘¤</span>
          <span class="ui-label">Account</span>
        </a>
      {% endif %}

      <a href="{{ routes.cart_url }}" class="ui-link cart-link" aria-label="Cart">
        <span class="ui-icon">ðŸ›’</span>
        <span class="ui-label">Cart</span>
        {% if cart.item_count > 0 %}
          <span class="cart-count data-box">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
