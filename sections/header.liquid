{% comment %} --- sections/header.liquid --- {% endcomment %}
<header class="site-header">
  <div class="header-content">
    <div class="header-logo">
      <a href="{{ routes.root_url }}" class="logo-link">STARSIDE_ARMORY</a>
    </div>

    <nav class="main-nav" role="navigation">
      <ul class="nav-list">
        {%- for link in section.settings.menu.links -%}
          <li class="nav-item {% if link.links != blank %}has-dropdown{% endif %}">
            <a href="{{ link.url }}" class="nav-link {% if link.active %}active{% endif %}"{% if link.links != blank %} aria-haspopup="true" aria-expanded="false"{% endif %}>
              //:{{ link.title | upcase }}_
              {% if link.links != blank %}
                <span class="dropdown-indicator" aria-hidden="true">â–¼</span>
              {% endif %}
            </a>
            {% if link.links != blank %}
              <ul class="dropdown-menu" role="menu" aria-label="{{ link.title }} submenu">
                {%- for childlink in link.links -%}
                  <li class="dropdown-item" role="none">
                    <a href="{{ childlink.url }}" class="dropdown-link {% if childlink.active %}active{% endif %}" role="menuitem">
                      {{ childlink.title | upcase }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            {% endif %}
          </li>
        {%- else -%}
          <li class="nav-item">
            <a href="{{ routes.collections_url }}/weaponry" class="nav-link">//:WEAPONRY_</a>
          </li>
          <li class="nav-item">
            <a href="{{ routes.collections_url }}/armor-systems" class="nav-link">//:ARMOR_SYSTEMS_</a>
          </li>
          <li class="nav-item">
            <a href="{{ routes.collections_url }}/cybernetics" class="nav-link">//:CYBERNETICS_</a>
          </li>
        {%- endfor -%}
      </ul>
    </nav>

    <button class="mobile-menu-toggle" aria-label="Toggle mobile menu" aria-expanded="false">
      <span class="hamburger">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </button>

    <div class="user-interface">
      {%- if shop.customer_accounts_enabled -%}
        {%- if customer -%}
          <a href="{{ routes.account_url }}" class="ui-link account-link">
            <span class="ui-icon">ðŸ‘¤</span>
            <span class="ui-label">[USER: {{ customer.first_name | default: 'AGENT' }}]</span>
          </a>
        {%- else -%}
          <a href="{{ routes.account_login_url }}" class="ui-link account-link">
            <span class="ui-icon">ðŸ‘¤</span>
            <span class="ui-label">[LOGIN_TERMINAL]</span>
          </a>
        {%- endif -%}
      {%- endif -%}
      <button onclick="openCartDrawer()" class="ui-link cart-link" aria-label="Open cart drawer">
        <span class="ui-icon">ðŸ›’</span>
        <span class="ui-label">[INVENTORY]</span>
        {% if cart.item_count > 0 %}
          <span class="cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </button>
    </div>
  </div>
</header>



{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
