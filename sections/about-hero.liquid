    },
    {
      "type": "checkbox",
      "id": "show_image_overlay",
      "label": "Show image overlay",
      "default": true
    },
    {
      "type": "text",
      "id": "image_overlay_text",
      "label": "Image overlay text",
      "default": "[CLASSIFIED]"
    }
  ],
  "presets": [
    {
      "name": "About Hero"
    }
  ]
}
