{% comment %}
  This section is used in the password template to render landing page shown
  when password protection is applied to a store.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/password
{% endcomment %}

<div class="access-terminal">
  <h1 class="store-name">{{ shop.name }}</h1>
  
  {% if shop.password_message %}
    <p>{{ shop.password_message }}</p>
  {% endif %}
  
  {% form 'storefront_password', class: 'access-form' %}
    {% if form.errors %}
      <div class="access-errors">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}

    <input 
      type="password" 
      name="password" 
      class="access-input"
      placeholder="{{ 'password.password' | t }}"
      autocomplete="current-password"
    >

    <button type="submit" class="btn btn-primary btn-lg">
      {{ 'password.enter' | t }}
    </button>
  {% endform %}
</div>

{% schema %}
{
  "name": "t:general.password",
  "tag": "section",
  "class": "section-password"
}
{% endschema %}
